Subject: [PATCH] imx-boot workaround for dtc unknown in mkimage

---
 iMX8M/soc.mak | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/iMX8M/soc.mak b/iMX8M/soc.mak
index 1b6e357..09fc725 100644
--- a/iMX8M/soc.mak
+++ b/iMX8M/soc.mak
@@ -85,7 +85,7 @@ dtbs = fsl-$(PLAT)-evk.dtb
 u-boot.itb: $(dtbs)
 	./$(PAD_IMAGE) bl31.bin
 	TEE_LOAD_ADDR=$(TEE_LOAD_ADDR) ATF_LOAD_ADDR=$(ATF_LOAD_ADDR) ./mkimage_fit_atf.sh $(dtbs) > u-boot.its
-	./mkimage_uboot -E -p 0x3000 -f u-boot.its u-boot.itb
+	env PATH=/usr/bin ./mkimage_uboot -E -p 0x3000 -f u-boot.its u-boot.itb
 	@rm -f u-boot.its
 
 dtbs_ddr3l = fsl-$(PLAT)-ddr3l-$(VAL_BOARD).dtb
